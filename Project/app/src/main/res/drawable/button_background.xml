<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffeaeaea" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffffff" />
            <stroke
                android:width="1dp"
                android:color="#ff000000" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>
</selector>