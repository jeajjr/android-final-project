<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/item_text1"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="10sp"
        android:text="item_text1"
        android:textColor="#DFDFE0"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/item_text2"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16sp"
        android:text="item_text2"
        android:textColor="#DFDFE0"
        android:textSize="14sp"
        android:layout_marginBottom="10sp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#333333"
        android:layout_marginLeft="@dimen/list_separator_margin"
        android:layout_marginRight="@dimen/list_separator_margin"
        />

</LinearLayout>