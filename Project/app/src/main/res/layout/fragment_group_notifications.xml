<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.almasosorio.sharethatbill.FragmentGroupBills"
    android:background="@drawable/background"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <view
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            class="com.almasosorio.sharethatbill.ViewLoading"
            android:id="@+id/viewLoader"
            android:layout_above="@+id/layout_add_button"/>

        <TextView
            android:id="@+id/text_list_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_notifications"
            android:textColor="#DFDFE0"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="16sp"
            android:paddingRight="16sp"
            android:gravity="center"
            />

    </RelativeLayout>
</LinearLayout>
